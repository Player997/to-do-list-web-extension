{
  "manifest_version": 3,
  "name": "To-Do List Sidebar",
  "version": "1.0",
  "description": "Simple to-do list that opens in a sidebar.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
